# rules
--enable \
    andOperator, \
    anyObjectProtocol, \
    blankLinesAroundMark, \
    blankLinesAtEndOfScope, \
    blankLinesBetweenScopes, \
    braces, \
    consecutiveBlankLines, \
    consecutiveSpaces, \
    duplicateImports, \
    elseOnSameLine, \
    emptyBraces, \
    enumNamespaces, \
    extensionAccessControl, \
    fileHeader, \
    hoistPatternLet, \
    indent, \
    initCoderUnavailable, \
    isEmpty, \
    leadingDelimiters, \
    linebreakAtEndOfFile, \
    modifierOrder, \
    numberFormatting, \
    preferKeyPath, \
    redundantBackticks, \
    redundantBreak, \
    redundantExtensionACL, \
    redundantFileprivate, \
    redundantGet, \
    redundantInit, \
    redundantLet, \
    redundantLetError, \
    redundantNilInit, \
    redundantObjc, \
    redundantParens, \
    redundantPattern, \
    redundantRawValues, \
    redundantReturn, \
    redundantSelf, \
    redundantVoidReturnType, \
    semicolons, \
    sortedImports, \
    spaceAroundOperators, \
    spaceAroundBraces, \
    spaceAroundBrackets, \
    spaceAroundComments, \
    spaceAroundGenerics, \
    spaceAroundOperators, \
    spaceAroundParens, \
    spaceInsideBraces, \
    spaceInsideBrackets, \
    spaceInsideComments, \
    spaceInsideGenerics, \
    spaceInsideParens, \
    strongOutlets, \
    strongifiedSelf, \
    todos, \
    trailingClosures, \
    trailingCommas, \
    trailingSpace, \
    typeSugar, \
    unusedArguments, \
    void, \
    wrapArguments, \
    wrapEnumCases, \
    yodaConditions

# Options
--commas inline
--extensionacl on-declarations
--guardelse same-line
--header "\n FinanceKit \n Copyright Â© {year} Christian Mitteldorf. All rights reserved.\n MIT license, see LICENSE file for details.\n"
--indent 4
--minversion 0.48
--self init-only
--stripunusedargs closure-only
--swiftversion 5.5
--wraparguments before-first
--wrapcollections before-first
--xcodeindentation disabled

# Disabled rules
# Could be disabled due to false positives or because of team agreements.
--disable \
    blankLinesAtStartOfScope, \
    organizeDeclarations, \
    redundantType, \
    sortedSwitchCases, \
    wrapAttributes, \
    wrapMultilineStatementBraces, \
    wrapSwitchCases
